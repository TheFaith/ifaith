<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ifaith.fellowship.userMapper">
	<select id="getUser" parameterType="int"
		resultType="com.ifaith.fellowship.entity.user.UserBasicInfo">
        <![CDATA[
        SELECT * 
        FROM [iFaithPeople].[dbo].[UserInformation] WITH(NOLOCK)
		WHERE [SysNo] = #{sysNo}
		]]>
	</select>

	<insert id="insertUser" useGeneratedKeys="true" keyProperty="sysNo"
		parameterType="com.ifaith.fellowship.entity.user.UserBasicInfo">
        <![CDATA[
        INSERT INTO [iFaithPeople].[dbo].[UserInformation](
        	[Name],
        	[Password],
        	[DateOfBirth],
        	[TypeID],
        	[IsEnabled],
        	[CreateTime],
        	[CreateUserSysNo],
        	[CreateUserName],
        	[UpdateTime],
        	[UpdateUserSysNo],
        	[UpdateUserName]
       	)VALUES(
			 #{name}
			,#{password}
			,#{dateOfBirth}
			,#{typeID}
			,#{isEnabled}
			,#{createTime}
			,#{createUserSysNo}
			,#{createUserName}
			,#{updateTime}
			,#{updateUserSysNo}
			,#{updateUserName}
		)
		]]>
	</insert>

	<update id="updateUser" parameterType="com.ifaith.fellowship.entity.user.UserBasicInfo">
        <![CDATA[
		UPDATE [iFaithPeople].[dbo].[UserInformation]
		  SET [Name] = #{name}
		     ,[Password] = #{password}
		     ,[DateOfBirth] = #{dateOfBirth}
		     ,[TypeID] = #{typeID}
		     ,[IsEnabled] = #{isEnabled}
		     ,[CreateTime] = #{createTime}
		     ,[CreateUserSysNo] = #{createUserSysNo}
		     ,[CreateUserName] = #{createUserName}
		     ,[UpdateTime] = #{updateTime}
		     ,[UpdateUserSysNo] = #{updateUserSysNo}
		     ,[UpdateUserName] = #{updateUserName}
		WHERE [SysNo] = #{sysNo}
		]]>
	</update>

	<delete id="deleteUser" parameterType="com.ifaith.fellowship.entity.user.UserBasicInfo">
        <![CDATA[
		DELETE FROM [iFaithPeople].[dbo].[UserInformation]
		WHERE [SysNo] = #{sysNo}
		]]>
	</delete>
</mapper>